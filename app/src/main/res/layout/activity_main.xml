<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <View
        android:id="@+id/center_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/post_button"
        android:layout_alignTop="@+id/editText"
        android:layout_marginTop="35dp"
        android:onClick="sendPost" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignLeft="@+id/post_button"
        android:layout_alignStart="@+id/post_button"
        android:layout_marginBottom="44dp"
        android:layout_below="@+id/urlLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter URL to post to below"
        android:id="@+id/urlLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:height="55dp"
        android:width="180dp"
        android:id="@+id/songlist"
        android:onClick="switchToSongList"
        android:layout_above="@+id/center_anchor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:width="180dp"
        android:text="Settings"
        android:id="@+id/settings"
        android:onClick="switchToSettings"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/songlist"
        android:layout_marginTop="-25dp"
        />

</RelativeLayout>
